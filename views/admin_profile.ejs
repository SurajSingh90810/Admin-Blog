<%- include("header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile</title>
    <style>
        .admin-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }
        .profile {
            width: 400px; /* Increased width */
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center;
            background-color: #f9f9f9;
        }
        .profile img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 15px;
        }
        .profile ul {
            list-style: none;
            padding: 0;
        }
        .profile ul li {
            margin: 8px 0;
        }
        .home-link {
            display: inline-block;
            margin-top: 15px;
            text-decoration: none;
            padding: 8px 15px;
            background-color: #007BFF;
            color: white;
            border-radius: 5px;
        }
        .home-link:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <% if (admin) { %>
            <div class="profile">
              <h2>Admin Profile</h2>
              <img src="<%= admin.profileImage %>" alt="Admin Image">
              <ul>
                <li><strong>First Name:</strong> <%= admin.firstname %></li>
                <li><strong>Last Name:</strong> <%= admin.lastname %></li>
                <li><strong>Email:</strong> <%= admin.email %></li>
                <li><strong>Password:</strong> <%= admin.password %></li>
                <li><strong>Gender:</strong> <%= admin.gender %></li>
                <li><strong>Hobbies:</strong> <%= admin.hobbies %></li>
                <li><strong>Mobile No:</strong> <%= admin.mobileNo %></li>
              </ul>
              <a href="/dashboard" class="home-link">Home Page</a>
            </div>
        <% } else { %>
            <p>Admin data is not available.</p>
        <% } %>
    </div>
</body>
</html>
<%- include("footer") %>
